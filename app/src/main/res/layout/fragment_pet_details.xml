<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/image_pet"/>

    <TextView
        android:paddingLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_pet"
        android:text="Pet Name"
        android:textSize="@dimen/name_font_size"
        android:id="@+id/text_pet_name"/>

    <TextView
        android:paddingLeft="8dp"
        android:layout_below="@id/text_pet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pet size"
        android:id="@+id/text_pet_size"/>

    <TextView
        android:paddingLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text_pet_size"
        android:layout_below="@id/text_pet_name"
        android:text="Pet gender"
        android:id="@+id/text_pet_gender"/>

    <TextView
        android:paddingLeft="5dp"
        android:layout_below="@id/text_pet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text_pet_gender"
        android:text="Pet age"
        android:id="@+id/text_pet_age"/>

    <TextView
        android:paddingLeft="8dp"
        android:id="@+id/text_pet_description"
        android:layout_below="@id/text_pet_age"
        android:text="Pet description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text_pet_description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_pet_shelter_name"
            android:text="Shelter Name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_pet_shelter_adress"
            android:layout_below="@id/text_pet_shelter_name"
            android:text="Shelter Adress"/>

    </FrameLayout>


</RelativeLayout>